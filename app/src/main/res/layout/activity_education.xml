<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc"
    tools:context=".EducationActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:background="#d6ecf2">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|top"
            android:background="#d6ecf2"
            android:nestedScrollingEnabled="false"
            android:alignmentMode="alignMargins">

            <ImageView
                android:layout_width="139dp"
                android:layout_height="184dp"
                android:id="@+id/avatar"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="15dp"
                android:src="@drawable/neves"
                android:contentDescription="@string/avatar_alt"
                android:layout_rowSpan="5" />

            <TextView
                android:layout_width="155dp"
                android:layout_height="36dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/name"
                android:id="@+id/name"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_margin="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="15dp"
                android:textSize="12sp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_margin="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp">

                <TextView
                    android:layout_width="87dp"
                    android:layout_height="36dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/graduation_title"
                    android:id="@+id/graduation_title"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_margin="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="15dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_columnSpan="3" />

                <TextView
                    android:layout_width="260dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/graduation"
                    android:id="@+id/graduation"
                    android:layout_margin="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:textAlignment="textStart" />

                <TextView
                    android:layout_width="87dp"
                    android:layout_height="36dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/pgraduation_title"
                    android:id="@+id/pgraduation_title"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_margin="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="15dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_gravity="left|center_vertical" />

                <TextView
                    android:layout_width="261dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/pgraduation"
                    android:id="@+id/pgraduation"
                    android:layout_margin="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="12sp"
                    android:layout_gravity="top"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:textAlignment="textStart" />
            </GridLayout>

        </GridLayout>
    </ScrollView>

</FrameLayout>
